			cout << "* " << setw(25) << "6. Print Indented Tree" << setw(46) << "*" << endl;
			cout << "* " << setw(19) << "7. Write to File" << setw(52) << " *" << endl;
			cout << "* " << setw(22) << "8. Usage Statistics" << setw(49)  << " *" << endl;
			cout << "* " << setw(12) << "9. Logout" << setw(59) << " *" << endl;
			cout << "* " << setw(26) << "[Choose Your Option] : ";
            int option;
            cin >> option;
			cout << "*************************************************************************" << endl;
            system("CLS");

            switch(option) {
                case 1:
                    break;

                case 2:
                    cout << "Name of the person to be deleted : " <<endl;
                    cin.ignore();
                    getline(cin, name);
                    temporary.setName(name);
                    tree.remove(temporary);
                    hashfunc.removeObject(temporary);
                    break;

                case 3 :
                    break;
                    
                case 4 :
                    hashfunc.PrintTable();
                    break;
                case 5 :
                    tree.print_inOrder();
                    break;
                case 6:
                    tree.printIndent();
                    break;
                case 7 :
                    
                    break;
                    
